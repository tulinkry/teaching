<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta lang="cs" />
	<meta http-equiv="Content-language" content="cs" />
	<meta name="viewport" content="width=device-width" />

	{block sheets}
	<link rel="stylesheet" type="text/css" href="{$basePath}/css/bootstrap.min.css" />
	<link rel="stylesheet" type="text/css" href="{$basePath}/css/github.css" />
	<link rel="stylesheet" type="text/css" href="{$basePath}/css/codemirror.css" />
	<link rel="stylesheet" type="text/css" href="{$basePath}/css/style.css" />
	{/block}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

	<title>{ifset title}{include title|striptags} | {/ifset}Kryštof Tulinger - výuka</title>
</head>

<body>


    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation">
                    <span class="sr-only">Zobrazit menu</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{link :Front:Homepage:default}">Domů</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navigation">
				<ul class="nav navbar-nav" role="tablist">
			        <li n:foreach="$top_menu as $key => $val" n:class="$presenter->isLinkCurrent($val['route'], $val['parameters']) ? 'active'">
			        	<a href="{$presenter->link($val['route'], $val['parameters'])}">{$key}
			        		<span n:if="$presenter->isLinkCurrent($val['route'], $val['parameters'])" class="sr-only"> (aktuální)</span>
			        	</a>
			        </li>
				</ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

	<div class="container">
		<ol class="breadcrumb">
		    <li>
		        <i class="fa fa-dashboard"></i>  <a href="{link Homepage:default}">Domů</a>
		    </li>
		    {ifset navigation}{include navigation}{/ifset}
		</ol>
	</div>

	{block top-content}
	<div class="container">
		<div n:foreach="$flashes as $flash" n:class="alert, alert-$flash->type">{$flash->message}</div>

		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default panel-content">
					<div class="panel-heading">
						{block heading}
						<h1>
						</h1>
						{/block}
					</div>
					<div class="panel-body">
						{include content}
					</div>
				</div>
			</div>
		</div>
	</div>
	{/block}

	<nav class="navbar navbar-default navbar-fixed-bottom copyright">
	  <div class="container text-center"{if isset($lastUpdated) && $lastUpdated} title="Naposledy upraveno {$lastUpdated|date: 'j. n. Y H:i:s'}"{/if}>Kryštof Tulinger &copy; 2016</div>
	</nav>


	{block scripts}
	<script src="{$basePath}/js/jquery.min.js"></script>
	<script src="{$basePath}/js/bootstrap.min.js"></script>
	<script src="{$basePath}/js/highlight.pack.js"></script>
	<script src="{$basePath}/js/codemirror.js"></script>
	<script src="{$basePath}/js/clike.js"></script>
	<script src="{$basePath}/js/showdown.min.js"></script>
	<script src="{$basePath}/js/nette.ajax.js"></script>
	<script src="{$basePath}/js/spinner.ajax.js"></script>

	<script src="{$basePath}/js/main.js"></script>
	<script>hljs.initHighlightingOnLoad();</script>
	{/block}

</body>
</html>



